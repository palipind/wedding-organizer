<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration  PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="javax.persistence.validation.mode">none</property>
        <!-- List of XML mapping files -->
        <mapping resource="com/weddingapi/db/Wedding.hbm.xml" />
        <mapping resource="com/weddingapi/db/DeviceToken.hbm.xml" />
        <mapping resource="com/weddingapi/db/Event.hbm.xml" />
        <mapping resource="com/weddingapi/db/WeddingEvent.hbm.xml" />
    </session-factory>
</hibernate-configuration>